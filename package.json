{
  "name": "nextjs-base",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"next dev -p 3001\" \"chokidar 'src/**/*' -c 'yarn watcher' --ignore-initial\"",
    "predev": "yarn watcher",
    "build": "next build",
    "prebuild": "yarn watcher",
    "start": "next start",
    "lint": "next lint",
    "format": "npx prettier --write .",
    "prepare": "husky",
    "watcher": "node scripts/watcher.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@tanstack/react-query": "^5.74.4",
    "axios": "^1.9.0",
    "next": "15.3.1",
    "next-auth": "^4.24.11",
    "next-intl": "^4.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.65.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "config": {
    "internationalization": {
      "locales": [
        "vi",
        "en"
      ],
      "defaultLocale": "vi"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "yarn format",
      "yarn lint"
    ]
  }
}
