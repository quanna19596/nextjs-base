{
  "name": "nextjs-base",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev -p 3001",
    "predev": "yarn router-protection",
    "build": "next build",
    "prebuild": "yarn router-protection",
    "start": "next start",
    "lint": "next lint",
    "format": "npx prettier --write .",
    "prepare": "husky init",
    "router-protection": "node generator/routes/scripts.js"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.74.4",
    "axios": "^1.9.0",
    "next": "15.3.1",
    "next-auth": "^4.24.11",
    "next-intl": "^4.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "config": {
    "internationalization": {
      "locales": [
        "vi",
        "en"
      ],
      "defaultLocale": "vi"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "yarn format"
    ]
  }
}
